#!/bin/sh -eu

# a way to get static pattern rules *without* GNU make

rm -f config.mk

for fmt in lisp
do
cat >> config.mk <<EOF
$fmt.tab.c $fmt.tab.h : $fmt.y parsers.h
	\$(YACC) \$(YFLAGS) -d -b $fmt $fmt.y

$fmt.lex.c : $fmt.l $fmt.tab.h parsers.h
	\$(LEX) \$(LFLAGS) -t $fmt.l > $fmt.lex.c

EOF
done
